@page "/registrar"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>ProjectE - Registrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <h1 class="d-flex justify-center">Controle Financeiro</h1>

            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />

                <MudTextField Variant="Variant.Outlined" T="string" Label="E-mail" HelperText="Campo obrigatório" InputType="InputType.Email" For="@(() => InputModel.Email)" @bind-Value="InputModel.Email" />
                <MudTextField Variant="Variant.Outlined" T="string" Label="Senha" HelperText="Campo obrigatório" InputType="InputType.Password" For="@(() => InputModel.Password)" @bind-Value="InputModel.Password" />
                <MudTextField Variant="Variant.Outlined" T="string" Label="Confirmar Senha" HelperText="Campo obrigatório" InputType="InputType.Password" For="@(() => InputModel.ConfirmPassword)" @bind-Value="InputModel.ConfirmPassword" />
                <MudTextField Variant="Variant.Outlined" T="string" Label="Senha" HelperText="Campo obrigatório" InputType="InputType.Text" For="@(() => InputModel.Cpf)" @bind-Value="InputModel.Cpf" />

                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Registrar</MudButton>
                        <MudSpacer />
                        <MudButton Href="/login" Variant="Variant.Filled" EndIcon="@Icons.Material.Sharp.AccessibilityNew" Color="Color.Primary">Já possui uma conta?</MudButton>
                    }
                </div>

            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>